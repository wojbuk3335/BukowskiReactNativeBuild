{
  "expo": {
    "name": "Bukowski",
    "slug": "bukowski-mobile-2025",
    "version": "1.0.9",
    "orientation": "portrait",
    "icon": "./assets/images/logo2.png",
    "scheme": "bukowski",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bukowski.inventory17.mobile2025",
      "buildNumber": "9",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "This app requires camera access exclusively for scanning barcodes and QR codes on inventory items. For example, when you scan a product's barcode, the app uses the camera to read the code and retrieve product details from the inventory database. The camera is used only during active scanning and no photos or videos are captured, stored, or transmitted.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to let you attach product images to inventory records for documentation purposes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo2.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.bukowski.inventory17.app2025"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "/assets/images/logo2.png"
    },
    "plugins": [
      "expo-router",
      "expo-navigation-bar",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo2.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9e828d3c-82f4-4e57-ab94-21d149810aef"
      }
    }
  }
}
